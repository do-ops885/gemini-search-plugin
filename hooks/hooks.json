{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "search|Search",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-edit-search.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "search|Search",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/error-search.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "/search|/search-stats|/clear-cache",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-edit-search.sh"
          }
        ]
      }
    ]
  }
}